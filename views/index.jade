extends layout

block content
  div.header
    h1= title
  if error
    h3= error
  if username
    h3(class=user) Welcome #{username}!
    div.newTweet
      form(method='post' action='/tweet')
        label What's on your mind?       
          input(id='tweetbody' type='text' name='tweetBody' placeholder='Your mouth sayeth...')
          input(type='submit' value='Loudmouf' id='bigButton')
    div
      h1(class="title") Here are your tweets or whatever the hell you want to sayeth
      each tweet in tweetTable
        p(class="tweetSlot")=tweet.username + ' - ' + tweet.tweetBody + ' - ' + tweet.tweetTime

  else
    p You are not logged in. Would you like to be?
    div
      form(method="post" action="/register")
        h2 Register a new account
        div
          label Username:
            input(type="text" name="username" placeholder="username")
        div
          label Password:
            input(type="password" name="password")
        div
          label Confirm Password:
            input(type="password" name="password_confirm")
        div
          input(type="submit" value="Pleased to meet you!")
    div
      form(method="post" action="/login")
        h2 Log into an existing account
        div
          label Username:
            input(type="text" name="username" placeholder="username")
        div
          label Password:
            input(type="password" name="password")
        div
          input(type="submit" value="Let me in!")
